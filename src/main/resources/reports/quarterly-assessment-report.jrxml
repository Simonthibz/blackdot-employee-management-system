<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="quarterly-assessment-report" pageWidth="842" pageHeight="595" orientation="Landscape"
              columnWidth="802" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <parameter name="reportTitle" class="java.lang.String"/>
    <parameter name="generatedDate" class="java.time.LocalDateTime"/>
    <parameter name="quarter" class="java.lang.String"/>
    <parameter name="year" class="java.lang.Integer"/>
    <parameter name="totalAttempts" class="java.lang.Long"/>
    <parameter name="passedAttempts" class="java.lang.Long"/>
    <parameter name="failedAttempts" class="java.lang.Long"/>
    <parameter name="passRate" class="java.lang.Double"/>
    <parameter name="averageScore" class="java.lang.Double"/>

    <field name="employeeId" class="java.lang.String"/>
    <field name="employeeName" class="java.lang.String"/>
    <field name="assessmentTitle" class="java.lang.String"/>
    <field name="score" class="java.lang.Integer"/>
    <field name="totalQuestions" class="java.lang.Integer"/>
    <field name="correctAnswers" class="java.lang.Integer"/>
    <field name="timeTaken" class="java.lang.Integer"/>
    <field name="passed" class="java.lang.Boolean"/>
    <field name="completedAt" class="java.time.LocalDateTime"/>

    <title>
        <band height="100">
            <staticText>
                <reportElement x="0" y="0" width="400" height="30"/>
                <textElement>
                    <font size="18" isBold="true"/>
                </textElement>
                <text><![CDATA[Blackdot Employee Management System]]></text>
            </staticText>
            <textField>
                <reportElement x="0" y="30" width="400" height="20"/>
                <textElement>
                    <font size="14" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{reportTitle}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="500" y="30" width="200" height="20"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA["Generated: " + $P{generatedDate}.format(java.time.format.DateTimeFormatter.ofPattern("dd/MM/yyyy HH:mm"))]]></textFieldExpression>
            </textField>
            
            <!-- Summary Statistics -->
            <rectangle>
                <reportElement x="0" y="60" width="802" height="35" backcolor="#F0F0F0"/>
            </rectangle>
            <textField>
                <reportElement x="10" y="65" width="150" height="15"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Total Attempts: " + $P{totalAttempts}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="170" y="65" width="150" height="15"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Passed: " + $P{passedAttempts}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="330" y="65" width="150" height="15"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Failed: " + $P{failedAttempts}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="490" y="65" width="150" height="15"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Pass Rate: " + $P{passRate} + "%"]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="650" y="65" width="150" height="15"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Avg Score: " + $P{averageScore} + "%"]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <columnHeader>
        <band height="30">
            <rectangle>
                <reportElement x="0" y="0" width="802" height="25" backcolor="#E6E6E6"/>
            </rectangle>
            <staticText>
                <reportElement x="5" y="5" width="60" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Employee ID]]></text>
            </staticText>
            <staticText>
                <reportElement x="70" y="5" width="120" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Employee Name]]></text>
            </staticText>
            <staticText>
                <reportElement x="195" y="5" width="140" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Assessment]]></text>
            </staticText>
            <staticText>
                <reportElement x="340" y="5" width="50" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Score]]></text>
            </staticText>
            <staticText>
                <reportElement x="395" y="5" width="60" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Correct/Total]]></text>
            </staticText>
            <staticText>
                <reportElement x="460" y="5" width="60" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Time (min)]]></text>
            </staticText>
            <staticText>
                <reportElement x="525" y="5" width="50" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Status]]></text>
            </staticText>
            <staticText>
                <reportElement x="580" y="5" width="120" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Completed Date]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="25">
            <rectangle>
                <reportElement x="0" y="0" width="802" height="20" forecolor="#CCCCCC"/>
                <graphicElement>
                    <pen lineWidth="0.5"/>
                </graphicElement>
            </rectangle>
            <textField isBlankWhenNull="true">
                <reportElement x="5" y="2" width="60" height="18"/>
                <textFieldExpression><![CDATA[$F{employeeId}]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="70" y="2" width="120" height="18"/>
                <textFieldExpression><![CDATA[$F{employeeName}]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="195" y="2" width="140" height="18"/>
                <textFieldExpression><![CDATA[$F{assessmentTitle}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="340" y="2" width="50" height="18"/>
                <textFieldExpression><![CDATA[$F{score} + "%"]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="395" y="2" width="60" height="18"/>
                <textFieldExpression><![CDATA[$F{correctAnswers} + "/" + $F{totalQuestions}]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="460" y="2" width="60" height="18"/>
                <textFieldExpression><![CDATA[$F{timeTaken}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="525" y="2" width="50" height="18"/>
                <textFieldExpression><![CDATA[$F{passed} ? "PASS" : "FAIL"]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="580" y="2" width="120" height="18"/>
                <textFieldExpression><![CDATA[$F{completedAt} != null ? $F{completedAt}.format(java.time.format.DateTimeFormatter.ofPattern("dd/MM/yyyy HH:mm")) : "Incomplete"]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <pageFooter>
        <band height="30">
            <textField>
                <reportElement x="0" y="10" width="100" height="15"/>
                <textFieldExpression><![CDATA["Page " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="700" y="10" width="100" height="15"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA["Blackdot EMS"]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>
</jasperReport>