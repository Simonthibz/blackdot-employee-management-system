<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="task-report" pageWidth="842" pageHeight="595" orientation="Landscape"
              columnWidth="802" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <parameter name="reportTitle" class="java.lang.String"/>
    <parameter name="generatedDate" class="java.time.LocalDateTime"/>
    <parameter name="totalTasks" class="java.lang.Long"/>
    <parameter name="completedTasks" class="java.lang.Long"/>
    <parameter name="pendingTasks" class="java.lang.Long"/>
    <parameter name="inProgressTasks" class="java.lang.Long"/>

    <field name="title" class="java.lang.String"/>
    <field name="description" class="java.lang.String"/>
    <field name="assignedToName" class="java.lang.String"/>
    <field name="assignedByName" class="java.lang.String"/>
    <field name="priority" class="java.lang.String"/>
    <field name="status" class="java.lang.String"/>
    <field name="dueDate" class="java.time.LocalDate"/>
    <field name="createdAt" class="java.time.LocalDateTime"/>

    <title>
        <band height="120">
            <staticText>
                <reportElement x="0" y="0" width="500" height="30"/>
                <textElement>
                    <font size="18" isBold="true"/>
                </textElement>
                <text><![CDATA[Blackdot Employee Management System]]></text>
            </staticText>
            <textField>
                <reportElement x="0" y="30" width="500" height="20"/>
                <textElement>
                    <font size="14" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{reportTitle}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="600" y="30" width="200" height="20"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA["Generated: " + $P{generatedDate}.format(java.time.format.DateTimeFormatter.ofPattern("dd/MM/yyyy HH:mm"))]]></textFieldExpression>
            </textField>
            
            <!-- Summary Statistics -->
            <rectangle>
                <reportElement x="0" y="60" width="802" height="50" backcolor="#F8F8F8"/>
            </rectangle>
            <staticText>
                <reportElement x="10" y="70" width="100" height="15"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Task Summary]]></text>
            </staticText>
            <textField>
                <reportElement x="10" y="90" width="150" height="15"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Total Tasks: " + $P{totalTasks}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="180" y="90" width="150" height="15"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Completed: " + $P{completedTasks}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="350" y="90" width="150" height="15"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["In Progress: " + $P{inProgressTasks}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="520" y="90" width="150" height="15"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Pending: " + $P{pendingTasks}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <columnHeader>
        <band height="30">
            <rectangle>
                <reportElement x="0" y="0" width="802" height="25" backcolor="#E6E6E6"/>
            </rectangle>
            <staticText>
                <reportElement x="5" y="5" width="120" height="20"/>
                <textElement>
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Task Title]]></text>
            </staticText>
            <staticText>
                <reportElement x="130" y="5" width="150" height="20"/>
                <textElement>
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Description]]></text>
            </staticText>
            <staticText>
                <reportElement x="285" y="5" width="90" height="20"/>
                <textElement>
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Assigned To]]></text>
            </staticText>
            <staticText>
                <reportElement x="380" y="5" width="90" height="20"/>
                <textElement>
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Assigned By]]></text>
            </staticText>
            <staticText>
                <reportElement x="475" y="5" width="60" height="20"/>
                <textElement>
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Priority]]></text>
            </staticText>
            <staticText>
                <reportElement x="540" y="5" width="80" height="20"/>
                <textElement>
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Status]]></text>
            </staticText>
            <staticText>
                <reportElement x="625" y="5" width="70" height="20"/>
                <textElement>
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Due Date]]></text>
            </staticText>
            <staticText>
                <reportElement x="700" y="5" width="95" height="20"/>
                <textElement>
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Created]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="25">
            <rectangle>
                <reportElement x="0" y="0" width="802" height="23" forecolor="#CCCCCC"/>
                <graphicElement>
                    <pen lineWidth="0.5"/>
                </graphicElement>
            </rectangle>
            <textField isBlankWhenNull="true">
                <reportElement x="5" y="3" width="120" height="18"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{title}]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="130" y="3" width="150" height="18"/>
                <textElement>
                    <font size="7"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{description}.length() > 60 ? $F{description}.substring(0, 60) + "..." : $F{description}]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="285" y="3" width="90" height="18"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{assignedToName}]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="380" y="3" width="90" height="18"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{assignedByName}]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="475" y="3" width="60" height="18"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{priority}]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="540" y="3" width="80" height="18"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{status}]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="625" y="3" width="70" height="18"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{dueDate} != null ? $F{dueDate}.format(java.time.format.DateTimeFormatter.ofPattern("dd/MM/yyyy")) : "N/A"]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="700" y="3" width="95" height="18"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{createdAt}.format(java.time.format.DateTimeFormatter.ofPattern("dd/MM/yy HH:mm"))]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <pageFooter>
        <band height="30">
            <textField>
                <reportElement x="0" y="10" width="100" height="15"/>
                <textFieldExpression><![CDATA["Page " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="700" y="10" width="100" height="15"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA["Blackdot EMS"]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>
</jasperReport>
