<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="employee-task-history" pageWidth="595" pageHeight="842"
              columnWidth="555" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <parameter name="reportTitle" class="java.lang.String"/>
    <parameter name="generatedDate" class="java.time.LocalDateTime"/>
    <parameter name="employeeId" class="java.lang.String"/>
    <parameter name="employeeName" class="java.lang.String"/>
    <parameter name="department" class="java.lang.String"/>
    <parameter name="position" class="java.lang.String"/>
    <parameter name="totalTasks" class="java.lang.Long"/>
    <parameter name="completedTasks" class="java.lang.Long"/>
    <parameter name="pendingTasks" class="java.lang.Long"/>
    <parameter name="inProgressTasks" class="java.lang.Long"/>
    <parameter name="completionRate" class="java.lang.Double"/>

    <field name="title" class="java.lang.String"/>
    <field name="description" class="java.lang.String"/>
    <field name="assignedByName" class="java.lang.String"/>
    <field name="priority" class="java.lang.String"/>
    <field name="status" class="java.lang.String"/>
    <field name="dueDate" class="java.time.LocalDate"/>
    <field name="completedAt" class="java.time.LocalDateTime"/>
    <field name="createdAt" class="java.time.LocalDateTime"/>

    <title>
        <band height="180">
            <staticText>
                <reportElement x="0" y="0" width="400" height="30"/>
                <textElement>
                    <font size="18" isBold="true"/>
                </textElement>
                <text><![CDATA[Blackdot Employee Management System]]></text>
            </staticText>
            <textField>
                <reportElement x="0" y="30" width="400" height="20"/>
                <textElement>
                    <font size="14" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{reportTitle}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="400" y="30" width="155" height="20"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA["Generated: " + $P{generatedDate}.format(java.time.format.DateTimeFormatter.ofPattern("dd/MM/yyyy HH:mm"))]]></textFieldExpression>
            </textField>
            
            <!-- Employee Information -->
            <rectangle>
                <reportElement x="0" y="60" width="555" height="60" backcolor="#F8F8F8"/>
            </rectangle>
            <staticText>
                <reportElement x="10" y="70" width="100" height="15"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Employee Information]]></text>
            </staticText>
            <textField>
                <reportElement x="10" y="90" width="200" height="15"/>
                <textFieldExpression><![CDATA["Employee ID: " + $P{employeeId}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="220" y="90" width="200" height="15"/>
                <textFieldExpression><![CDATA["Name: " + $P{employeeName}]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="10" y="105" width="200" height="15"/>
                <textFieldExpression><![CDATA["Department: " + $P{department}]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="220" y="105" width="200" height="15"/>
                <textFieldExpression><![CDATA["Position: " + $P{position}]]></textFieldExpression>
            </textField>
            
            <!-- Summary Statistics -->
            <rectangle>
                <reportElement x="0" y="125" width="555" height="50" backcolor="#E6E6E6"/>
            </rectangle>
            <staticText>
                <reportElement x="10" y="133" width="100" height="15"/>
                <textElement>
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Task Performance Summary]]></text>
            </staticText>
            <textField>
                <reportElement x="10" y="153" width="100" height="15"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA["Total: " + $P{totalTasks}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="120" y="153" width="100" height="15"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA["Completed: " + $P{completedTasks}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="230" y="153" width="100" height="15"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA["In Progress: " + $P{inProgressTasks}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="340" y="153" width="100" height="15"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA["Pending: " + $P{pendingTasks}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="450" y="153" width="100" height="15"/>
                <textElement>
                    <font size="8" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Rate: " + $P{completionRate} + "%"]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <columnHeader>
        <band height="30">
            <rectangle>
                <reportElement x="0" y="0" width="555" height="25" backcolor="#E6E6E6"/>
            </rectangle>
            <staticText>
                <reportElement x="5" y="5" width="110" height="20"/>
                <textElement>
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Task Title]]></text>
            </staticText>
            <staticText>
                <reportElement x="120" y="5" width="100" height="20"/>
                <textElement>
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Assigned By]]></text>
            </staticText>
            <staticText>
                <reportElement x="225" y="5" width="60" height="20"/>
                <textElement>
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Priority]]></text>
            </staticText>
            <staticText>
                <reportElement x="290" y="5" width="70" height="20"/>
                <textElement>
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Status]]></text>
            </staticText>
            <staticText>
                <reportElement x="365" y="5" width="65" height="20"/>
                <textElement>
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Due Date]]></text>
            </staticText>
            <staticText>
                <reportElement x="435" y="5" width="115" height="20"/>
                <textElement>
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Completed]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="40">
            <rectangle>
                <reportElement x="0" y="0" width="555" height="38" forecolor="#CCCCCC"/>
                <graphicElement>
                    <pen lineWidth="0.5"/>
                </graphicElement>
            </rectangle>
            <textField isBlankWhenNull="true">
                <reportElement x="5" y="3" width="110" height="14"/>
                <textElement>
                    <font size="8" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{title}]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="5" y="18" width="110" height="18"/>
                <textElement>
                    <font size="7"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{description} != null && $F{description}.length() > 40 ? $F{description}.substring(0, 40) + "..." : $F{description}]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="120" y="3" width="100" height="16"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{assignedByName}]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="225" y="3" width="60" height="16"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{priority}]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="290" y="3" width="70" height="16"/>
                <textElement>
                    <font size="8" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{status}]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="365" y="3" width="65" height="16"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{dueDate} != null ? $F{dueDate}.format(java.time.format.DateTimeFormatter.ofPattern("dd/MM/yyyy")) : "N/A"]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="435" y="3" width="115" height="16"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{completedAt} != null ? $F{completedAt}.format(java.time.format.DateTimeFormatter.ofPattern("dd/MM/yy HH:mm")) : "Not Completed"]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <pageFooter>
        <band height="30">
            <textField>
                <reportElement x="0" y="10" width="100" height="15"/>
                <textFieldExpression><![CDATA["Page " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="450" y="10" width="100" height="15"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA["Blackdot EMS"]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>
</jasperReport>
